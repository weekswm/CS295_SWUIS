@model Species
@{
    ViewData["Title"] = "ViewSpecies";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewSpecies</title>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">You Chose @Model.SpeciesName</h1>
    </div>
    <br />
    <div>
        <table style="width:100%">
            <tr>
                <th>Species Name</th>
                <th>Classification</th>
                <th>Designation</th>
                <th>Avg. Height (in.)</th>
                <th>Language</th>
                <th>Avg. Life Span (yrs.)</th>
                <th>Homeworld</th>
            </tr>
            <tr>
                <td>
                    @Model.SpeciesName
                </td>
                <td>
                    @Model.Classification
                </td>
                <td>
                    @Model.Designation
                </td>
                <td>
                    @Model.AvgHeight
                </td>
                <td>
                    @Model.Language
                </td>
                <td>
                    @Model.AvgLifeSpan
                </td>
                <td>
                    @Model.Homeworld.PlanetName
                </td>
            </tr>
        </table>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="text-center">
        <h1 class="display-4">@Model.Homeworld.PlanetName: the @Model.SpeciesName Homeworld</h1>
    </div>
    <br />
    <div>
        <table style="width:100%">
            <tr>
                <th>Planet Name</th>
                <th>Rotational Period (mths)</th>
                <th>Orbital Period (days)</th>
                <th>Diameter (ft.)</th>
                <th>Climate</th>
                <th>Gravity (std.)</th>
            </tr>
            <tr>
                <td>
                    @Model.Homeworld.PlanetName
                </td>
                <td>
                    @Model.Homeworld.RotationalPeriod
                </td>
                <td>
                    @Model.Homeworld.OrbitalPeriod
                </td>
                <td>
                    @Model.Homeworld.Diameter
                </td>
                <td>
                    @Model.Homeworld.Climate
                </td>
                <td>
                    @Model.Homeworld.Gravity
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
